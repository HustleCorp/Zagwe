{
    "hosting": {
        "public": "build",
        "headers": [
            {
                "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=7200"
                    }
                ]
            },
            {
                "source": "**/*.js",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            }
        ],
        "rewrites": [
            { "source": "/posts/**", "function": "eventsReqHandler" },
            { "source": "**", "destination": "/app.html"}
        ]
    }
}